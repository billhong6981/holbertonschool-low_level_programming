CC=gcc
SRC = main.c holberton.c
NAME = holberton
OBJ = $(SRC:.c=.o)
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

%.o: %.c
	$(CC) $(CFLAGS)	-c -o $@ $<

all: $(OBJ)
	$(CC) $^ -o $(NAME)

.PHONY: clean oclean fclean re
clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean

re: oclean all
